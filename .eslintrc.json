{
  "globals": {
    "process": true,
    "__dirname": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "no-unused-vars": 0,
    "semi": [
      2,
      "never"
    ]
  },
  "env": {
    "jest": true,
    "es6": true,
    "shared-node-browser": true,
    "commonjs": true
  },
  "extends": "eslint:recommended"
}
